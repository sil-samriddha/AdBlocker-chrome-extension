{
    "manifest_version": 2,
    "name": "AD-BLOCKER",
    "description": "This extension blocks ads on websites to improve user experience.",
    "version": "1.0.0",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "blocker.js"
        ]
    },
    "icons": {
        "16": "icons/16x16.png",
        "24": "icons/24x24.png",
        "32": "icons/32x32.png",
        "64": "icons/64x64.png"
    }
}